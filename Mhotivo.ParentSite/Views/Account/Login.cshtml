    <script src="~/Content/js/plugins/countdown/jquery.countdown.js"></script> <!--countdown-->
    <!--settings-->
    <script src="~/Content/js/settings.js"></script> <!--settings-->


<script type="text/javascript">
    jQuery(document).ready(function () {
       
        $('#logInRef').click();
        return false;
    });
</script>

<a class="white nicdark_mpopup_window_noclose hide" href="#loginForm" id="logInRef"></a>

<div id="loginForm" class="nicdark_bg_white nicdark_radius zoom-anim-dialog mfp-hide nicdark_window " style="max-width: 350px" >
    <div class="nicdark_textevidence nicdark_bg_orange nicdark_radius_top">
        <div style="margin: 15px">
            <h4 class="white center">Iniciar Sesión</h4>
        </div>
    </div>
    <div class="nicdark_margin20">
        @using (@Html.BeginForm("LogIn", "Account", FormMethod.Post))
        {
             @Html.ValidationSummary(true)
            <p class="greydark2 nicdark_marginleft60 ">Correo Electrónico</p>
            <input type="email" class="nicdark_marginleft60" id="email" name="Email" required/>
            <div class="nicdark_space20"></div>
            
            <p class="greydark2 nicdark_marginleft60">Contraseña</p>
            <input type="password" class="nicdark_marginleft60" id="pass" name="Password" required/>
            <div class="nicdark_space30"></div>
            
            <input type="submit" class="nicdark_btn nicdark_bg_green small nicdark_shadow nicdark_radius white right nicdark_marginright20" value=" Iniciar "/>
            <br/>
            <br/>    
           
        }
    </div>
    

</div>
@model Mhotivo.ParentSite.Models.ChangePasswordModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well well-sm">
                @using (Html.BeginForm("ChangePassword", "Account", null, FormMethod.Post, new {@class = "form-horizontal"}))
                {
                    <fieldset>
                        <legend class="text-center">Cambiar Contraseña</legend>

                        <!-- Name input-->
                        <div class="form-group">
                            <label class="col-md-3 control-label">Contraseña Actual</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.OldPassword, new {@class = "form-control", placeholder = "Contraseña Actual", type = "password", required = "required"})

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Contraseña Nueva</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.NewPassword, new {@class = "form-control", placeholder = "Contraseña Nueva", type = "password", required = "required"})

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Confirmar Contraseña Nueva</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.ConfirmNewPassword, new {@class = "form-control", placeholder = "Confirmar Contraseña Nueva", type = "password", required = "required"})

                            </div>
                        </div>

                        <!-- Form actions -->
                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary btn-lg">Actualizar</button>
                            </div>
                        </div>
                    </fieldset>
                }

            </div>
        </div>
    </div>
</div>

@{
    if (null != ViewBag.Message)
    {
       <text>
           <script type="text/javascript">
               alert("@ViewBag.Message");
           </script>
       </text>
    }
}
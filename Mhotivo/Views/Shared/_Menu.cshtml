
<style type="text/css">
    .nav-listchild {
        background-color: #333;
    }
</style>
<script type="text/javascript" src="~/Scripts/listCollapse.js"></script>
@{
    var valSession = HttpContext.Current.Session["loggedUserRole"];
    var rolName = "";
    if (valSession != null)
    {
        rolName = valSession.ToString();
    }
}

@*RolName:
    @rolName*@

@if (rolName == "Administrador" || rolName == "Director")
{
    <ul class="nav nav-list" id="MainMenu">
        <li id="Accounts">
            <i class="icon-group"></i>
            <span class="menu-text">Cuentas y Personas</span>
            <ul class="nav nav-list">
                <li></li>
                @if (rolName == "Administrador")
                {
                    <li>
                        <a href="/Administrative">
                            <i class="icon-blank"></i>
                            <span class="menu-text"> Administrativos </span>
                        </a>
                    </li>
                }

                <li>
                    <a href="/Teacher">
                        <i class="icon-blank"></i>
                        <span class="menu-text"> Maestros </span>
                    </a>
                </li>
                <li>
                    <a href="/Tutor">
                        <i class="icon-blank"></i>
                        <span class="menu-text"> Tutores </span>
                    </a>
                </li>
                <li>
                    <a href="/Student">
                        <i class="icon-blank"></i>
                        <span class="menu-text"> Estudiantes </span>
                    </a>
                </li>
                @if (rolName == "Administrador")
                {
                    <li>
                        <a href="/User">
                            <i class="icon-blank"></i>
                            <span class="menu-text"> Usuarios </span>
                        </a>
                    </li>
                    <li>
                        <a href="/NewUser">
                            <i class="icon-blank"></i>
                            <span class="menu-text"> Usuarios Nuevos</span>
                        </a>
                    </li>
                }
            </ul>
        </li>
        <li id="EducationScheme">
            <i class="icon-asterisk"></i>
            <span class="menu-text">Esquema Educativo</span>
            <ul class="nav nav-list">
                <li></li>

                @if (rolName == "Administrador")
                {
                    <li>
                        <a href="/EducationLevel">
                            <i class="icon-blank"></i>
                            <span class="menu-text"> Niveles de Educacion </span>
                        </a>
                    </li>
                }

                <li>
                    <a href="/Grade">
                        <i class="icon-blank"></i>
                        <span class="menu-text"> Grados </span>
                    </a>
                </li>
            </ul>
        </li>
        <li id="AcademicYearScheme">
            <i class="icon-calendar"></i>
            <span class="menu-text">Esquema Academico</span>
            <ul class="nav nav-list">
                <li></li>
                <li>
                    <a href="/AcademicYear/Index">
                        <i class="icon-blank"></i>
                        <span class="menu-text"> Años Académicos </span>
                    </a>
                </li>
                <li>
                    <a href="/Enroll">
                        <i class="icon-blank"></i>
                        <span class="menu-text"> Matricula </span>
                    </a>
                </li>

            </ul>
        </li>
        <li id="Notifications">
            <i class="icon-bell"></i>
            <span class="menu-text">Notificaciones</span>
            <ul class="nav nav-list">
                <li></li>

                <li>
                    <a href="/Notification">
                        <i class="icon-blank"></i>
                        <span class="menu-text"> Notificaciones </span>
                    </a>
                </li>
                <li>
                    <a href="/Notification/Approve">
                        <i class="icon-blank"></i>
                        <span class="menu-text"> Autorizar Notificaciones</span>
                    </a>
                </li>
            </ul>
        </li>

        <li id="DataImport">
            <i class="icon-archive"></i>
            <span class="menu-text">Importador de Datos</span>
            <ul class="nav nav-list">
                <li></li>
                @*<li>
                        <a href="/DataImport">
                            <i class="icon-blank"></i>
                            <span class="menu-text">Configuracion </span>
                        </a>
                    </li>*@
                <li>
                    <a href="/DataImport">
                        <i class="icon-blank"></i>
                        <span class="menu-text"> Importar Datos </span>
                    </a>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    if (rolName == "Maestro")
    {
        <ul class="nav nav-list" id="MainMenu">
            <li id="Accounts">
            <i class="icon-group"></i>
            <span class="menu-text">Cuentas y Personas</span>
            <ul class="nav nav-list">
                <li></li>
            </ul>
        </ul>
    }
    <ul class="nav nav-list">
        <li>
            <a href="~/Notification/">
                <i class="icon-bell-alt"></i>
                <span class="menu-text"> Notificaciones </span>
            </a>
        </li>
        <li>
            <a href="/Homework">
                <i class="icon-bell-alt"></i>
                <span class="menu-text"> Tareas </span>
            </a>
        </li>
    </ul>
}
<script type="text/javascript">
    window.onload = function () {

        //choose one of these options

        //option 1 - no auto-child-collapse
        //compactMenu('someID',false,'&plusmn; ');

        //option 2 - auto-child-collapse
        compactMenu('MainMenu', true, '');

    }
</script>
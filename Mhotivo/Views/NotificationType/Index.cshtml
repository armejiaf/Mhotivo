@model IEnumerable<Mhotivo.Models.NotificationTypeModel>

@{
    ViewBag.Title = "Tipos de Notificaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_MessageArea.cshtml")

<h2>Tipos de Notificiones</h2>
<a href="/NotificationType/Add/"><span class="btn btn-small btn-primary">Agregar Tipo de Notificacion</span></a>

@if(!Model.Any())
{
    <div class="well well-large">
		<h4 class="blue">Tabla Vacia</h4>
		No hay registros a mostrar.
	</div>
}
else
{
    <table class="table table-striped table-bordered table-hover" id="sample-table-1">
	    <thead>
		    <tr>
				<th>@Html.DisplayNameFor(model => model.TypeDescription)</th>
                <th></th>
		    </tr>
	    </thead>
        <tbody>
        
            @foreach (var item in Model) {
                <tr>
				    <td>@Html.DisplayFor(modelItem => item.TypeDescription)</td>
                    <td>
                        <a href="/Group/Edit/@Html.DisplayFor(modelItem => item.NotificationTypeId)"><i class="icon-edit bigger-120">edit</i></a>
                        <a class="toDelete" role="button" id="@Html.DisplayFor(modelItem => item.NotificationTypeId)_Val"><i class="icon-trash bigger-120"></i></a>
                        @using (Html.BeginForm("Delete", "NotificationType", new { id = Html.DisplayFor(modelItem => item.NotificationTypeId) }, FormMethod.Post,
                            new { id = "Form_" + Html.DisplayFor(modelItem => item.NotificationTypeId) + "_Val", style = "display: none" })) { }
                        <input type="hidden" id="@Html.DisplayFor(modelItem => item.NotificationTypeId)_Val_Message"
                               value="¿Realmente desea eliminar el grupo @Html.DisplayFor(modelItem => item.TypeDescription)?" />
                    </td>
                </tr>
            }
        </tbody>
    </table>   
    
}

<!-- Modal -->
<div tabindex="-1" class="modal hide fade" id="EditModal" style="display: none;" aria-hidden="true">
    <div id="body" class="modal-body">
        
    </div>
</div>

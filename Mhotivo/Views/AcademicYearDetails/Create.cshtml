@using System.Web.Mvc.Html
@model Mhotivo.Models.AcademicYearDetailsRegisterModel

@{
    ViewBag.Title = "Agregar Detalles Año Académico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section AddToHead{
    <style type="text/css">
        span.InputLabel {
            width: 567px;
            height: 15px;
            font-size: 10px;
            margin: 0 0 10px 0;
            vertical-align: text-top;
            font-weight: bold;
        }
    </style>
}

@Html.Partial("~/Views/Shared/_MessageArea.cshtml")

@using (Html.BeginForm("Add", "AcademicYearDetails", FormMethod.Post, new { id = "Form", @class = "form-horizontal", @Style = "margin:0;" }))
{
    @Html.ValidationSummary(true)
    <h2>Agregar Detalles de Año Académico</h2>

    <p>
        <a href="../AcademicYearDetails/Index" data-dismiss="modal" class="btn btn-small">
            <i class="icon-remove"></i>
            Cancel
        </a>

        <button type="submit" class="btn btn-small btn-primary">
            <i class="icon-ok"></i>
            Agregar
        </button>
    </p>
    <div>

    </div>
    
    @InputExtensions.Hidden(Html, "AcademicYearId", ViewBag.IdAcademicYear, new { @class = "hiddencss", maxlength = 255 /*, etc... */ })

    //@Html.HiddenFor(model => Model.AcademicYearId); 
    
    <div id="detailsAcademicYear" style="width: 500px;">
        <div style="float: left; width: 250px;">
            @Html.TextBoxFor(model => model.TeacherStartDate, new { @class = "date-picker", @data_date_format = "dd-mm-yyyy", @readonly = true })
            <span class="add-on">
                <i class="icon-calendar"></i>
            </span>
            <br /><span class="InputLabel">@Html.DisplayNameFor(model => model.TeacherStartDate)</span>
            <p class="text-error">@Html.ValidationMessageFor(model => model.TeacherStartDate)</p>
        </div>

        <br style="clear: left;" />
        <br style="clear: left;" />
        <div style="float: left; width: 250px;">
            @Html.TextBoxFor(model => model.TeacherEndDate, new { @class = "date-picker", @data_date_format = "dd-mm-yyyy", @readonly = true })
            <span class="add-on">
                <i class="icon-calendar"></i>
            </span>
            <br /><span class="InputLabel">@Html.DisplayNameFor(model => model.TeacherEndDate)</span>
            <p class="text-error">@Html.ValidationMessageFor(model => model.TeacherEndDate)</p>
        </div>

        <br style="clear: left;" />
        <br style="clear: left;" />
        <div style="float: left; width: 250px;">
            @Html.TextBoxFor(model => model.Schedule, new { @class = "date-picker", @data_date_format = "dd-mm-yyyy", @readonly = true })
            <span class="add-on">
                <i class="icon-calendar"></i>
            </span>
            <br /><span class="InputLabel">@Html.DisplayNameFor(model => model.Schedule)</span>
            <p class="text-error">@Html.ValidationMessageFor(model => model.Schedule)</p>
        </div>

        <div style="float: left; width: 100px;">
            @Html.EditorFor(model => model.Room)
            <br /><span class="InputLabel">@Html.DisplayNameFor(model => model.Room)</span>
            <p class="text-error">@Html.ValidationMessageFor(model => model.Room)</p>
        </div>
        
        <div style="float: left; width: 250px;">
            @Html.DropDownListFor(model => model.Teacher.Id, new SelectList(ViewBag.MeisterId, "Value", "Text"), "  -- Maestro --")
            <br /><span class="InputLabel">@Html.DisplayNameFor(model => model.Teacher)</span>
            <p class="text-error">@Html.ValidationMessageFor(model => model.Teacher)</p>
        </div>
        
        <div style="float: left; width: 250px;">
            @Html.DropDownListFor(model => model.Course.Id, new SelectList(ViewBag.CourseId, "Value", "Text"), "  -- Curso --")
            <br /><span class="InputLabel">@Html.DisplayNameFor(model => model.Course)</span>
            <p class="text-error">@Html.ValidationMessageFor(model => model.Course)</p>
        </div>
    </div>
    <br style="clear: left;" />
    <div>
        <p>
            <a href="~/AcademicYearDetails/Index" data-dismiss="modal" class="btn btn-small">
                <i class="icon-remove"></i>
                Cancel
            </a>

            <button type="submit" class="btn btn-small btn-primary">
                <i class="icon-ok"></i>
                Agregar
            </button>
        </p>
    </div>

}
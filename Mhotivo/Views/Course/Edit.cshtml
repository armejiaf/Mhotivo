@using System.Activities.Statements
@model Mhotivo.Models.CourseEditModel

@{
    ViewBag.Title = "Editar Materia";
    Layout = "";
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div id="body" class="modal-body" style="max-height: 500px;">
    @using (Html.BeginForm("Edit", "Course", FormMethod.Post, new { id = "Form", @class = "form-horizontal", @Style = "margin:0;" }))
    {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Editar Materia</legend>

        @Html.HiddenFor(model => model.Id)

        <p class="text-error">
            @Html.ValidationMessageFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Area)
        </p>

        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.Name)
            </div>
        </div>
        
        <div class="control-group">
            <div class="control-label">
                <span class="InputLabel">@Html.DisplayNameFor(model => model.Area)</span>
                <p class="text-error">@Html.ValidationMessageFor(model => model.Area)</p>
            </div>
            <div class="controls">
                @Html.DropDownListFor(model => model.Area, new SelectList(ViewBag.AreaId, "Value", "Text"), "  -- Area --")
            </div>
        </div>

        <div class="space"></div>

        <div class="modal-footer">
            <button data-dismiss="modal" class="btn btn-small">
                <i class="icon-remove"></i>
                Cancel
            </button>

            <button type="submit" class="btn btn-small btn-primary">
                <i class="icon-ok"></i>
                Actualizar
            </button>
        </div>


    </fieldset>
    }
</div>
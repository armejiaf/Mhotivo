@model IEnumerable<Mhotivo.Models.DisplayAcademicYearModel>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    @Html.Partial("~/Views/Shared/_MessageArea.cshtml")

    <h2>Años Académicos Registrados  </h2>

    <a class="toAdd" data-toggle="modal" role="button" href="~/AcademicYear/Add"><span class="btn btn-small btn-primary active">Agregar Año Académico</span></a>

    @if (!Model.Any())
    {
        <div class="well well-large">
            <h4 class="blue">Tabla Vacia</h4>
            No hay años académicos a mostrar.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover" id="sample-table-1">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Year)</th>
                    <th>@Html.DisplayNameFor(model => model.Grade)</th>
                    <th>@Html.DisplayNameFor(model => model.Section)</th>
                    <th>@Html.DisplayNameFor(model => model.EducationLevel)</th>
                    <th>@Html.DisplayNameFor(model => model.Approved)</th>
                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Year)</td>
                        <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                        <td>@Html.DisplayFor(modelItem => item.Section)</td>
                        <td>@Html.DisplayFor(modelItem => item.EducationLevel)</td>
                        <td>@Html.DisplayFor(modelItem => item.Approved)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                        <td>
                            <a href="~/AcademicYearDetails/Index/@Html.DisplayFor(modelItem => item.Id)" class="toDetails">Detalles</a>
                            <a class="toEdit" data-toggle="modal" role="button" data-target="#EditModal" id="/AcademicYear/Edit/@Html.DisplayFor(modelItem => item.Id)"><i class="icon-edit bigger-120"></i></a>
                            <a class="toDelete" role="button" id="@Html.DisplayFor(modelItem => item.Id)_Val"><i class="icon-trash bigger-120"></i></a>
                            @using (Html.BeginForm("Delete", "AcademicYear", new { id = Html.DisplayFor(modelItem => item.Id) }, FormMethod.Post,
                            new { id = "Form_" + Html.DisplayFor(modelItem => item.Id) + "_Val", style = "display: none" })) { }
                            <input type="hidden" id="@Html.DisplayFor(modelItem => item.Id)_Val_Message"
                                   value="¿Realmente desea eliminar el año académico @Html.DisplayFor(modelItem => item.Year)?" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }

    <!-- Modal -->
    <div tabindex="-1" class="modal hide fade" id="EditModal" style="display: none;" aria-hidden="true">
        <div id="body" class="modal-body">

        </div>
    </div>

